<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f3f0"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="45dp"
        android:layout_height="29dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="70dp"
        app:srcCompat="@drawable/abejita" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        app:srcCompat="@drawable/abejita2" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="247dp"
        android:layout_height="87dp"
        android:layout_gravity="bottom"
        android:baselineAlignBottom="true"
        app:srcCompat="@drawable/florecitas" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:text="Inserte su nombre completo:"
            android:textColor="#484e50"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/Nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="ej: Miriam Rodriguez Vázquez"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColorHint="#bcbcbc"
            tools:layout_editor_absoluteX="78dp"
            tools:layout_editor_absoluteY="43dp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Inserte su correo electrónico:"
            android:textColor="#484e50"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/Correo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="ej: sastian@gmail.com"
            android:inputType="textEmailAddress"
            android:textAlignment="center"
            android:textColorHint="#bcbcbc" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Inserte un breve mensaje resumiendo lo que quiera decirnos:"
            android:textColor="#484e50"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/Asunto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Asunto"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColorHint="#bcbcbc" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Por si quiere dejar más información:"
            android:textColor="#484e50"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/Mensaje"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:ems="10"
            android:hint="Más información (opcional)"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColorHint="#bcbcbc" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Enviar" />

    </LinearLayout>

</FrameLayout>

